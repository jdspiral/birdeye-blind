<div class='container'>
  <h1>Customer Reveiw Portal</h1>

  <%= form_for @customer do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :phone %><br>
      <%= f.text_field :phone %>
    </p>

    <p>

      <%= f.submit "Send Review Link", class: "btn btn-success" %>
    </p>
  <% end %>
</div>
