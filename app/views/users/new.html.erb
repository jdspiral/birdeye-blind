<div class='container'>
    <h1>Sign up</h1>
<div class="col-xs-6 first pull-left">
    <%= form_for(@user) do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name, :placeholder => "First name", :class => "form-control" %>
    </p>
    <p>
      <%= f.label :email %><br>
      <%= f.email_field :email, :placeholder => "Email", :class => "form-control" %>
    </p>
    <p>
      <%= f.label :password %><br>
      <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
    </p>
    <p>
      <%= f.submit "Create an account", class: "btn-submit", :class => "btn btn-primary" %>
    </p>
    <% end %>
</div>
</div>
